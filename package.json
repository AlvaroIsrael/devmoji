{
  "name": "@devmoji/monorepo",
  "version": "1.0.0",
  "repository": "git@github.com:folke/devmoji.git",
  "author": "Folke Lemaitre <folke.lemaitre@gmail.com>",
  "license": "MIT",
  "private": true,
  "gitHooks": {
    "prepare-commit-msg": "devmoji -e",
    "commit-msg": "yarn -s commitlint -e -V"
  },
  "scripts": {
    "changelog": "yarn conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "yarn workspaces run conventional-changelog --preset angular --release-count 0 --outfile ./CHANGELOG.md --pkg package.json --commit-path ."
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "commitlint": "^8.3.4",
    "conventional-changelog-cli": "^2.0.31",
    "yorkie": "^2.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
