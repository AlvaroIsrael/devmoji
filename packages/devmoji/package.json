{
  "name": "devmoji",
  "version": "0.0.0",
  "description": "Enhance your conventional commits with gitmoji",
  "keywords": [
    "gitmoji",
    "emoji",
    "git-commit",
    "commitlint"
  ],
  "author": "Folke Lemaitre <folke.lemaitre@gmail.com>",
  "homepage": "https://github.com/folke/devmoji#readme",
  "license": "MIT",
  "main": "lib/devmoji.js",
  "files": [
    "lib"
  ],
  "bin": {
    "devmoji": "bin/devmoji.js"
  },
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/folke/devmoji.git"
  },
  "scripts": {
    "tn": "ts-node --transpile-only",
    "update:emoji": "yarn tn src/updater.ts",
    "update:config": "yarn ts-interface-builder src/config-options.ts",
    "prebuild": "yarn clean && yarn update:config && yarn lint --fix && yarn test",
    "clean": "yarn rimraf lib",
    "test": "yarn jest",
    "build": "yarn tsc -p tsconfig.build.json",
    "lint": "yarn eslint bin/*.js src/*.ts",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.1.0",
    "ts-interface-checker": "^0.1.10"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/node-emoji": "^1.8.1",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.4.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "node-fetch": "^2.6.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-interface-builder": "^0.2.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.4"
  }
}
